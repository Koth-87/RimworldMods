					<shadowData>
						<volume>(0.25, 0.3, 0.25)</volume>
						<offset>(0,0,-0.15)</offset>
					</shadowData>
				</femaleGraphicData>
				<dessicatedBodyGraphicData>
					<texPath>Things/Pawn/Animal/Monkey/Dessicated_Monkey</texPath>
