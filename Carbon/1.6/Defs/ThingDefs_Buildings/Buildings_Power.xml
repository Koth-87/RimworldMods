<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<ThingDef ParentName="PowerConduit">
		<defName>CarbonPowerConduit</defName>
		<label>carbon conduit</label>
		<description>A set of heavy duty electrical cables for moving power around. Can be placed under walls and other buildings.</description>
		<graphicData>
			<texPath>Things/Building/Linked/CarbonPowerConduit_Atlas</texPath>
		</graphicData>
		<uiIconColor>(75,75,75)</uiIconColor>
		<statBases>
			<MaxHitPoints>250</MaxHitPoints>
			<WorkToBuild>70</WorkToBuild>
			<Flammability>0.0</Flammability>
			<Beauty>0</Beauty>
		</statBases>
		<researchPrerequisites>
			<li>CarbonResearch</li>
		</researchPrerequisites>
		<costList>
			<CarbonFiber>1</CarbonFiber>
		</costList>
	</ThingDef>

	<ThingDef ParentName="PowerConduit">
		<defName>UnderwaterCarbonPowerConduit</defName>
		<label>waterproof carbon conduit</label>
		<description>A set of heavy duty electrical cables for moving power around. Insulated for transmitting power in mud, marsh or under shallow water. Enemies usually won't notice it.</description>
		<graphicData>
			<texPath>Things/Building/Linked/CarbonPowerConduitUnderwater_Atlas</texPath>
			<color>(75,75,100,50)</color>
		</graphicData>
		<uiIconPath>Things/Building/Linked/WaterproofConduit_MenuIcon</uiIconPath>
		<uiIconColor>(75,75,100,150)</uiIconColor>
		<costList>
			<CarbonFiber>3</CarbonFiber>
		</costList>
		<constructEffect>ConstructDirt</constructEffect>
		<building>
			<ai_neverTrashThis>true</ai_neverTrashThis>
			<isTargetable>false</isTargetable>
			<expandHomeArea>false</expandHomeArea>
			<canBeDamagedByAttacks>false</canBeDamagedByAttacks>
		</building>
		<statBases>
			<MaxHitPoints>250</MaxHitPoints>
			<WorkToBuild>70</WorkToBuild>
			<Flammability>0.0</Flammability>
			<Beauty>0</Beauty>
		</statBases>
		<terrainAffordanceNeeded>Bridgeable</terrainAffordanceNeeded>
		<researchPrerequisites>
			<li>CarbonResearch</li>
		</researchPrerequisites>
	</ThingDef>

	<ThingDef ParentName="PowerConduit">
		<defName>CarbonPowerConduitUnderground</defName>
		<label>underground carbon conduit</label>
		<description>Hidden electrical cables for moving power around. Extra heavy duty. Enemies usually won't notice it.</description>
		<graphicData>
			<texPath>Things/Building/Linked/CarbonPowerConduit_Atlas</texPath>
			<color>(0,0,0,0)</color>
		</graphicData>
		<statBases>
			<MaxHitPoints>750</MaxHitPoints>
			<WorkToBuild>280</WorkToBuild>
			<Flammability>0.0</Flammability>
			<Beauty>0</Beauty>
		</statBases>
		<uiIconPath>Things/Building/Linked/WaterproofConduit_MenuIcon</uiIconPath>
		<uiIconColor>(75,75,100,100)</uiIconColor>
		<costList>
			<CarbonFiber>1</CarbonFiber>
		</costList>
		<constructEffect>ConstructDirt</constructEffect>
		<building>
			<ai_neverTrashThis>true</ai_neverTrashThis>
			<isTargetable>false</isTargetable>
			<expandHomeArea>false</expandHomeArea>
			<canBeDamagedByAttacks>false</canBeDamagedByAttacks>
		</building>
		<passability>Standable</passability>
		<researchPrerequisites>
			<li>CarbonResearch</li>
		</researchPrerequisites>
	</ThingDef>
	
</Defs>